<div class="pokemon-item col-xs-6 col-md-2 well" style="margin-right: 38px;" id="<%= poke_team.pkdx_id %>">

  <h5 style="margin-top:5px;"><%= poke_team.name %></h5>
    <br/>
  <%= image_tag(poke_team.avatar, size: '120x120') %>
  <br/>
  <img class='pokeball-icon' id="pokeball-<%= poke_team.pkdx_id %>" data-id="<%= poke_team.pkdx_id %>" width="30" height="30" src="http://img3.wikia.nocookie.net/__cb20130901024704/clubpenguin/images/4/4c/Pokeball.png">
  </img>
  <p>
    <%= button_to('Select', pokemon_teams_path(pokemon: poke_team.id, team: @team.id), class: 'btn btn-primary col-sm-12') %>
  </p>

</div>