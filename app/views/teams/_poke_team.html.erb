<div class="col-xs-6 col-md-3"
     style="height: 250px; -webkit-border-radius: 10px; -moz-border-radius: 10px; border-radius: 10px; background-color: rgba(60, 60, 60, 0.2); width: auto; margin: 30px;"
     id="<%= poke_team.pkdx_id %>">

  <h5 style="margin-top:5px;"><%= poke_team.name %></h5>
    <br/>
  <%= image_tag(poke_team.avatar, size: '120x120') %>
  <br/>
  <img id="pokeball-<%= poke_team.pkdx_id %>" width="30" height="30" src="http://img3.wikia.nocookie.net/__cb20130901024704/clubpenguin/images/4/4c/Pokeball.png" onclick="changeImage()">
  </img>
  <p>
    <%= button_to('Select', pokemon_teams_path(pokemon: poke_team.id, team: @team.id), class: 'btn btn-primary col-sm-12') %>
  </p>
  

</div>

<script type="text/javascript">
  var array_poke = [];
    function changeImage(){
      if (array_poke.length > 2)
        alert('Limit reached, remove a Pokemon to add a new one');
      else
      {
        array_poke.push(document.getElementById("pokeball-<%= poke_team.pkdx_id %>"));
        document.getElementById("pokeball-<%= poke_team.pkdx_id %>").src = "http://upload.wikimedia.org/wikipedia/en/f/fb/Yes_check.svg";
    }
  }
</script>