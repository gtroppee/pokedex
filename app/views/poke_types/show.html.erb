

<table class="table table-striped">
  <tr id="tab_name">
  	<td><h1><%= @poketype['name'] %> </h1> </td>
  </tr>
  <tr>
  	<td>
  		<h3> Ineffective 
  			<span class="badge">
  				<%= @poketype['ineffective'].count %>
  			 </span>
		</h3>
	</td>
  	<td>
  		<h3> No Effect 
  			<span class="badge">
  				<%= @poketype['no_effect'].count %>
