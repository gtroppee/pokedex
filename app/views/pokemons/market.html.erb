<div id="top_rated" style="height: 250px;"></div>

<script type="text/javascript">

	Morris.Bar({
	  element: 'top_rated',
	  data: [
	    { y: '2006', a: 100, b: 90 },
	    { y: '2007', a: 75,  b: 65 },
	    { y: '2008', a: 50,  b: 40 },
	    { y: '2009', a: 75,  b: 65 },
	    { y: '2010', a: 50,  b: 40 },
	    { y: '2011', a: 75,  b: 65 },
	    { y: '2012', a: 100, b: 90 }
	  ],
	  xkey: 'y',
	  ykeys: ['a'],
	  labels: ['Series A', 'Series B']
	});
</script>

<% if false %>
<% @top_rate.each do |k, v| %>
	<% Vote.where('pokemon_id = k').sum('rating') / v %>
	<%= pokemon_id = k %>
	<%= nb_vote = v %>
<% end %>
<% end %>